# Maintainer: DingVero <dingvero@outlook.com>

pkgname=relayfetch
pkgver=@VERSION@
pkgrel=1
pkgdesc="Lightweight file relay and HTTP server written in Rust"
arch=('x86_64' 'aarch64' 'riscv64')
url="https://github.com/dingwh03/relayfetch"
license=('MIT')

depends=('glibc' 'systemd')
makedepends=('cargo' 'git' 'pkg-config' 'openssl')

install=relayfetch.install

source=(
  "$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz"
  "relayfetch.service"
  "config.toml"
  "files.toml"
)
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cargo build --release --locked
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 target/release/relayfetch \
    "$pkgdir/usr/bin/relayfetch"

  install -Dm644 config.toml \
    "$pkgdir/etc/relayfetch/config.toml"
  install -Dm644 files.toml \
    "$pkgdir/etc/relayfetch/files.toml"

  install -Dm644 relayfetch.service \
    "$pkgdir/etc/systemd/system/relayfetch.service"

  # install -Dm644 LICENSE \
  #   "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
